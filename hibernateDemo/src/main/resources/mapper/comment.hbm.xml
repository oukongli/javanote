<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="model.Comment" table="t_comment">
        <id name="id">
            <generator class="native"/> <!--自动生成字符串,此时id必须为String-->
        </id>
        <property name="content"/>
    </class>
</hibernate-mapping>